<center>
  <form action="/user/update/<%= user.id %>" method="POST">
    <h2>Edit <%= user.name %></h2>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" value="<%= user.name %>" type="text" name="name" id="name">
      <label class="mdl-textfield__label" for="name">Name..</label>
    </div><br />
    
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" value="<%= user.username %>" type="text" name="username" id="username">
      <label class="mdl-textfield__label" for="address">Username..</label>
    </div><br />

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" value="<%= user.email %>" type="text" name="email" id="email">
      <label class="mdl-textfield__label" for="city">Email..</label>
    </div><br />

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <input class="mdl-textfield__input" value="<%= user.country %>" type="text" name="country" id="country">
      <label class="mdl-textfield__label" for="state">Country..</label>
    </div><br />

    <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Save</button>
  </form>
  <br>
  <a href="" onclick="goBack()" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
    <i class="material-icons">navigate_before</i>
  </a>

  <script>
    function goBack() {
      window.history.back();
    }
  </script>
</center>
